<Window x:Class="ArtStudio.clientDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtStudio"
        mc:Ignorable="d"
        Title="clientDB" Height="554" Width="1015.225">
    <Grid>
        <Button x:Name="showAll" Content="Показать всё" HorizontalAlignment="Left" Margin="3,2,0,0" VerticalAlignment="Top" Width="204" Height="82" Click="showAll_Click" Foreground="#FFF1E3E3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFB44545" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="521" Margin="213,0,0,0" VerticalAlignment="Bottom" Width="784" SelectionChanged="grid_SelectionChanged"/>
        <Button x:Name="addNewClient" Content="Внести данные в базу" HorizontalAlignment="Left" Margin="0,123,0,0" VerticalAlignment="Top" Width="207" Height="106" Click="addNewClient_Click" Foreground="#FFFBECEC">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFBD4545" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
